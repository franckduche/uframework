<?php

namespace Model;

class InMemoryFinder implements FinderInterface 
{
// REMPLACER PAR DES OBJETS !!!
    private $storage = array(
        [ "id" => "0", "status" => "Salut je comprends rien"],
        [ "id" => "2", "status" => "Salut je comprends rie"],
        [ "id" => "3", "status" => "Salut je comprends ri"],
        [ "id" => "4", "status" => "Salut je comprends r"],
        [ "id" => "5", "status" => "Salut je comprends"],
        [ "id" => "6", "status" => "Salut je comprend"],
        [ "id" => "7", "status" => "Salut je compren"],
        [ "id" => "8", "status" => "Salut je compre"],
        [ "id" => "9", "status" => "Salut je compr"],
        [ "id" => "10", "status" => "Salut je comp"],
        [ "id" => "11", "status" => "Salut je com"],
        [ "id" => "12", "status" => "Salut je co"],
        [ "id" => "13", "status" => "Salut je c"],
        [ "id" => "14", "status" => "Salut je"],
        [ "id" => "15", "status" => "Salut j"],
        [ "id" => "16", "status" => "Salut "],
 
    );

    public function findAll()
    {
        return $storage;
    }

    public function findOneById($id);
    {
        $result = null;
        foreach ($storage as $index => $status) {
            if ($index === $id) {
                $result = $status;
            }
        }
        return $result;
    }
    
    
}
